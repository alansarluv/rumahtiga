<%- include("../partials/header.ejs") -%>
</head>
<body>
	<%- include('../partials/navigation.ejs') %>
	<main>
		<% if (errorMessage) { %>
			<div class="user-message user-message--error"><%= errorMessage %></div>
		<% } %>	

		<div class="container">
			<div class="row min100vh align-items-center justify-content-md-center">
				<div class="col col-md-6 col-lg-4">
					<form action="/login" class="form-center mb15" method="POST">
						<h1 class="mb15">Please sign in</h1>
						<input
							id="email-login"
							class="form-control mb5 <%= validationErrors.find(e => e.param === 'email') ? 'is-invalid' : '' %>"
							type="email"
							name="email"
							placeholder="Email address"
							value="<%= oldInput.email %>"
							required autofocus>
						<input
							id="pass-login"
							class="form-control mb15 <%= validationErrors.find(e => e.param === 'password') ? 'is-invalid' : '' %>"
							type="password"
							name="password"
							placeholder="Password"
							value="<%= oldInput.password %>"
							required>
						<div class="text-center">
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
							<button class="btn btn-info btn-block" type="submit">L O G I N</button>
							<!-- <a class="btn btn-link btn-block text-danger" href="/auth/google" role="button">
								<i class="fa fa-google" aria-hidden="true"></i>
								Sign up with google
							</a> -->
							<a class="btn btn-link btn-block text-danger" href="/reset"> Reset Password </a>
							<a class="btn btn-link btn-block" href="/signup">Have no account? Register your email</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>
	<%- include("../partials/footer") -%>
	<%- include("../partials/end") -%>
